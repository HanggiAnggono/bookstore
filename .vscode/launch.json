{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: bs-cms debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bookstore-cms/node_modules/next/dist/bin/next",
      "cwd": "${workspaceFolder}/bookstore-cms",
      "args": ["dev"],
      "envFile": "${workspaceFolder}/bookstore-cms/.env",
    },
    {
      "name": "Python: bs-inventory",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run"],
      "env": {
        "PYTHONPATH": "/Users/hanggi/projects/bookstore",
        "FLASK_RUN_PORT": "5000",
        "FLASK_DEBUG": "1",
        "FLASK_APP": "${workspaceFolder}/bs-inventory/main.py"
      },
    },
    {
      "name": "Python: bs-stock",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "FLASK_RUN_PORT": "5001",
        "FLASK_DEBUG": "1",
        "FLASK_APP": "${workspaceFolder}/bs-stock/main.py"
      }
    }
  ],
  "compounds": [
    {
      "name": "run all",
      "configurations": [
        "Python: bs-cms debug",
        "Python: bs-inventory",
        "Python: bs-stock"
      ]
    }
  ]
}
